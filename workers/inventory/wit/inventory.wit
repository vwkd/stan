package stan:inventory

interface api {
  type id = u64;
  type amount = u32;

  enum error {
    too-low,
    too-high,
    // todo: ...
  }

  /// get inventory
  get: func(id: id) -> amount

  /// increase inventory
  /// returns new amount or error
  increase: func(id: id, amount: amount) -> result<_, error>
  
  /// decrease inventory
  /// returns new amount or error
  decrease: func(id: id, amount: amount) -> result<_, error>
}

world inventory {
  export api
}